    <link rel="stylesheet" type="text/css" href="public/css/feedbackmail.css">
<style>
    * {
        margin: 0;
        padding: 0;
        outline: none;
    }

    body, html {
        width: 100%;
        height: 100px;
    }

    body{
        background-color: #fafafa;
        font-family: Trebuchet MS, Helvetica;
    }

    h1, h2, h3, h4, h5, h6{
        font-family: 'Roboto Slab', serif;
        font-weight: lighter;
    }

    /*Шапка*/

    header {
        width: 100%;
        padding: 10px 0.5% 0px 0.5%;
        background: transparent;
        float: left;
        position: fixed;
    }

    #title {
        width: 100%;
        padding: 10px 0;
        background: transparent;
        float: left;

    }


    .container-fluid {
        padding: 3% 15%;
    }
    .navbar {
        padding-bottom: 4em;
    }
    .navbar-brand {
        font-size: 2em;
        font-weight: bold;
    }
    .nav-item {
        padding: 0px 15px;
        font-size: 1em;
    }
    .nav-link{
        font-size: 1.2em;
    }
    #about {
        float: left;
        width: 100%;
    }


    #about {
        text-align: center;
        font-size: 1em;
        line-height: 40px;
        margin-bottom: 10px;
    }

    #about > a {color: #fff;}

    #about > a:hover{
        color: #b0b0b0;
        text-decoration: underline;
    }

    #about > a:not(:last-child){
        margin-right: 7%;
    }

    .fixed {
        z-index: 5000;
        background-color: #fff;
        border-bottom: 1px solid silver;
    }

    header.fixed #logo {
        color: #343434;
    }

    .fixed #about a {color: #343434;}
    .fixed #about a:hover {color: #7c7c7c;}

    /* Основное */

    #top {
        width: 100%;

        background-image: url(https://s3-eu-west-1.amazonaws.com/eflanguagesblog/wp-content/uploads/sites/9/2018/12/07144631/test.png);
        background-blend-mode: multiply;
        background-color: #2e3a44;
        background-size: cover;
        text-align: center;
        color: #fff;
        font-size: 3em;
    }

    @media(min-width: 1001px){
        #top {
            font-size: 3em;
            height: 1000px;
        }
    }

    @media(max-width: 1000px) and (min-width: 651px){
        #top {
            font-size: 2em;
            height: 600px;
        }
    }

    @media(max-width: 650px){
        #top {
            font-size: 1.3em;
            height: 500px;
        }
    }

    #top h1 {
        padding-top: 20%;
    }

    #top {
        color: #ccc;
    }
</style>

</head>

<body>
<section id="title">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="cook1">AITU cooking</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav ml-auto">
                    <div class="navbar-nav">
                        <a class="nav-link" href="#">Contacts</a>
                        <a class="nav-link" href="#">Opportunities</a>
                        <a class="nav-link" href="#">Advantages</a>
                        <a class="nav-link" href="#">FAQ</a>
                    </div>
            </div>
        </nav>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
